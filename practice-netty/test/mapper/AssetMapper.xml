<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.migu.cresset.backend.mapper.AssetMapper">
    <sql id="column">
        asset_id assetId,name,asset_type assetType,uri,status,time_created timeCreated,time_modified timeModified
    </sql>

    <insert id="insertAsset" parameterType="cn.migu.cresset.backend.dataobject.AssetDO" keyProperty="assetId" useGeneratedKeys="true">
        insert into cresset_assets (name,asset_type,uri)
        values (#{name},#{assetType},#{uri})
    </insert>

    <update id="updateAsset" parameterType="cn.migu.cresset.backend.dataobject.AssetDO">
        update cresset_assets
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="assetType != null">
                asset_type = #{assetType},
            </if>
            <if test="uri != null">
                uri = #{uri},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            time_modified = #{timeModified}
        </set>
        <where>
            asset_id = #{assetId}
        </where>
    </update>

    <delete id="deleteAssetById" parameterType="java.lang.Integer">
        delete from cresset_assets where asset_id = #{assetId}
    </delete>

    <select id="selectAssetList" resultType="cn.migu.cresset.backend.dataobject.AssetDO">
        select
        <include refid="column"/>
        from cresset_assets
    </select>

    <select id="selectAssetById" parameterType="java.lang.Integer" resultType="cn.migu.cresset.backend.dataobject.AssetDO">
        select
        <include refid="column"/>
        from cresset_assets
        where asset_id = #{assetId}
    </select>
</mapper>