<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.migu.cresset.backend.mapper.ProjectMapper">
    <sql id="column">
        project_id id,project_type type,name,status,time_created timeCreated,time_modified timeModified
    </sql>

    <insert id="insertProject" useGeneratedKeys="true" keyProperty="id"
            parameterType="cn.migu.cresset.backend.dataobject.ProjectDO" >
        insert into cresset_projects(project_type,name,status,time_created)
        values
        (#{type},#{name},#{status},#{timeCreated})
    </insert>

    <select id="selectProjectById" parameterType="java.lang.Integer"
            resultType="cn.migu.cresset.backend.dataobject.ProjectDO">
        select
        <include refid="column"/>
        from cresset_projects where project_id = #{id}
    </select>

    <select id="selectProjectList" parameterType="java.lang.Integer" resultType="cn.migu.cresset.backend.dataobject.ProjectDO">
        select
        <include refid="column"/>
        from cresset_projects
        <if test="status.length > 0">
            where status in
            <foreach collection="status" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
        </if>
    </select>

    <update id="updateProject" parameterType="cn.migu.cresset.backend.dataobject.ProjectDO">
        update cresset_projects
        <set>
            <if test="projectType != null">
                project_type = #{type},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            time_modified = #{timeModified}
        </set>
        <where>
            project_id = #{id}
        </where>
    </update>

    <delete id="deleteProject" parameterType="java.lang.Integer">
        delete from cresset_projects where project_id = #{id}
    </delete>
</mapper>